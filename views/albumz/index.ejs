<% include ../partials/header %>
	<h1>My Albums
	<% if (authdata != null) {%>
		<a href = "/albumz/add" class="btn btn-success pull-right">Add Album</a>
	<% } %>
	</h1>

	<div class="row albumz">
		<% for(var i=0; i<albumz.length; i++) {%>
			<div class ="col-md-4 albumz">
				<a href = "/albumz/details/<%=albumz[i].id %>"><img src="/images/uploads/<%= albumz[i].cover %>"></a>
				<h4 class="album-title text-center"><%=albumz[i].title %></h4>
				<p class="artist-name text-center"><%=albumz[i].artist%></p>
			</div>
		<%}%>
	</div>
<% include ../partials/footer %>